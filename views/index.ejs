<%
    var category, list, i, k;
%>
<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <div id="wrapper">
            <h1><%= title %></h1>
            <input id="searchbar" class="spacing" type="text" placeholder="Search for a museum"/>

            <div class="content">

                <% for (i = 0; i < categories.length; i++) { 
                    category = categories[i].category;
                    list = categories[i].results;
                %>

                    <h2><%= category.description %></h2>

                    <ul class="grid-list-wrapper">

                        <% for (k = 0; k < list.length; k++) { %>
                            <li>
                                <a href="/museums/<%= list[k]._id %>">
                                    <img src="https://usercontent.googleapis.com/freebase/v1/image/<%= list[k].image[0].id %>?maxheight=163&maxwidth=163&mode=fillcropmid" />
                                    <div class="info">
                                        <h3><%= list[k].name %></h3>
                                    </div>
                                </a>
                            </li>
                        <% } %>

                    </ul>

                <% } %>
            </div>

        </div>

        <script type="text/javascript">
            var data = "";
            <% if (locals.dump) { %>
                data = <%- dump %>;
            <% } %>
        </script>

        <script data-main="/js/main" src="/js/lib/require.js"></script>

    </body>

</html>
